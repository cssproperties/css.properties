{
    "[css]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "explorer.fileNesting.patterns": {
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock",
        "*.ts": "$(capture).ts, $(capture).styles.ts, $(capture).template.ts, $(capture).options.ts, $(capture).spec.ts, $(capture).pw.spec.ts, $(capture).definition.ts, $(capture).spec.md"
    },
}